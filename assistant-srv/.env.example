# Environment variables for Personal AI Assistant Server

# Server settings
HOST=localhost
PORT=8000
DEBUG=true

# Data storage
DATA_DIR=data

# Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Session and JWT settings
SESSION_SECRET_KEY=your-session-secret-key-change-this-in-production-32bytes!
SESSION_EXPIRE_HOURS=168
SESSION_EXTEND_HOURS=12
ENABLE_TOKEN_ENCRYPTION=true
JWT_ISSUER=assistant-server
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=0.5
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# OAuth settings (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=


# LangSmith
LANGSMITH_TRACING="true"
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_PROJECT="ai-assistant"
LANGSMITH_API_KEY="your-api-key"
